<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.memcached</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Fast caching of any kind of data.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "memcached::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "memcached::config::executable" %></string>
      <string>-l</string>
      <string>127.0.0.1</string>
      <string>-p</string>
      <string><%= scope.lookupvar "memcached::config::port" %></string>
      <string>-U</string>
      <string><%= scope.lookupvar "memcached::config::port" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::boxen_user" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "memcached::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "memcached::config::logfile" %></string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "memcached::config::logfile" %></string>
  </dict>
</plist>
